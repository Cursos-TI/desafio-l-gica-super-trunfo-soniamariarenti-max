#include <stdio.h>

int main (){
    
    int casas_torre = 5;
    int casas_bispo = 5;
    int casas_rainha = 8;
    
    printf("Movimento da Torre:\n");
    for (int i = 1; i <= casas_torre; i++){
        printf("Direita (%d)\n", i);
    }

    printf("\n");
    
    printf("Movimento do Bispo:\n");
    int i = 1;
    while (i <= casas_bispo){
        printf("Cima, Direita (%d)\n", i);
        i++;
    }
    
    printf("\n");
    
    printf("Movimento da Rainha:\n");
    int j = 1;
    do{
        printf("Esquerda (%d)\n", j);
        j++;
    }while (j <= casas_rainha);
    
    return 0;
}
